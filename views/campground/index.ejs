<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is the campground of Marvels</h1>
            <p> View our handpicked collections of campgrounds from around the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create new campground</a>
            </p>
        </div>
    </header>

   <div class="row text-center"  style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%= camp.img %>" >
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class = "btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%});%>
    </div>
</div>

<% include ../partials/footer %>

